{
    "$schema": "https://railway.app/standard-schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pnpm install && pnpm build",
        "nixpacksPlan": {
            "providers": [
                "node"
            ],
            "phases": {
                "setup": {
                    "nixPkgs": [
                        "nodejs_20",
                        "pnpm"
                    ]
                },
                "install": {
                    "cmds": [
                        "pnpm install"
                    ]
                },
                "build": {
                    "cmds": [
                        "pnpm build"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "pnpm start",
        "restartPolicyType": "ON_FAILURE"
    }
}